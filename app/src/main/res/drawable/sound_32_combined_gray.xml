<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top=".5dp"
        android:right=".5dp"
        android:left=".5dp"
        android:bottom=".5dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/appViolette"
                android:endColor="@color/appBlue"
                android:angle="135"
                android:type="linear" />
            <size
                android:width="24dp"
                android:height="24dp">
            </size>
        </shape>

    </item>


    <item
        android:drawable="@drawable/ic_vector_circle_gray">
    </item>

    <item
        
        android:width="28dp"
        android:height="28dp"
        android:gravity="center"
        android:drawable="@drawable/ic_volume_up_gray_24dp" />
</layer-list>